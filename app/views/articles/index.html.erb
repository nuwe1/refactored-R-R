<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half">
        <% @articles.each do |article| %>
          <h2 class="title"><%= link_to article.title, article %></h2>
          <p class="subtitle mb-6"><%= article.excerpt %></p>
        <% end %>
      </div>
    </div>
  </div>
</section>
