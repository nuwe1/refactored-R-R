<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="content">
            <strong class="m-4"><%= comment.name %> - </strong> <%= comment.created_at %>
            <p class="comment">                   
                <%= comment.body %>         
            </p>
            </div>
        </div>
        <%= link_to 'Delete', [comment.article, comment], method: :delete, class: "button is-danger", data: { confirm: "Are you sure?"} %>
    </article>
</div>
