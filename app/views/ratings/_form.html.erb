<%= simple_form_for([@article, @article.ratings.build], data: { controller: "auto-save", auto_save_target: "form", action: "change->auto-save#saveToLocalStorage submit->auto save#clearLocalStorage" }) do |f| %>
<div class="columns">
  <div class="column">
    <div class="field">
      <div class="control">
        <%= f.input :rating, input_html: { min: '1', max: '10', class: 'input' }, wrapper: false, label: false%>
      </div>
    </div>
  </div>
  <div class="column">
    <%= f.button :submit, 'Rate', class: "button is-primary"%>
  </div>
</div>
<% end %>
  